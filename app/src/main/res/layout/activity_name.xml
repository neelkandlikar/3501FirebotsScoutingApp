<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Name">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/basicInfoTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_thin"
            android:text="Basic Information"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="50sp"
            android:layout_marginBottom="100dp"/>


        <EditText
            android:id="@+id/nameEditText"
            android:layout_width="290dp"
            android:layout_height="65dp"
            android:ems="10"
            android:gravity="center"
            android:hint="Name"
            android:layout_marginBottom="60dp"
            android:inputType="textPersonName"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            tools:layout_editor_absoluteX="163dp"
            tools:layout_editor_absoluteY="218dp" />


        <EditText
            android:id="@+id/teamScoutingEditText"
            android:layout_width="290dp"
            android:layout_height="65dp"
            android:ems="10"
            android:gravity="center"
            android:hint="@string/teamScouting"
            android:layout_marginBottom="60dp"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            tools:layout_editor_absoluteX="118dp"
            tools:layout_editor_absoluteY="424dp" />

        <EditText
            android:id="@+id/matchNumberEditText"
            android:layout_width="290dp"
            android:layout_height="65dp"
            android:ems="10"
            android:layout_marginBottom="80dp"
            android:gravity="center"
            android:hint="@string/matchNumber"
            android:textColor="@color/white"
            android:textColorHint="@color/white" />

        <Button
            android:id="@+id/superScoutButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="280dp"
            android:layout_height="55dp"
            android:layout_marginBottom="50dp"
            android:fontFamily="@font/roboto_thin"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/white"
            android:textAllCaps="false"
            android:text="@string/superScout"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/scoutButton"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="280dp"
            android:layout_height="55dp"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto_thin"
            android:background="@drawable/round_button"
            android:backgroundTint="@color/white"
            android:text="@string/scout"
            android:textSize="20sp"
            android:textColor="@color/black" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>